<%= form_for(@entry) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_field :title, placeholder: "What's on your mind?" %>
  <div class="field">
    <%= f.text_area :content, placeholder: "And a little more detail." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
